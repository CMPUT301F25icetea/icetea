<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/topHeaderBackgroundManageEvent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/yellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"/>

    <TextView
        android:id="@+id/textManageEventHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Event"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:fontFamily="@font/roboto_slab"
        app:layout_constraintTop_toTopOf="@id/topHeaderBackgroundManageEvent"
        app:layout_constraintBottom_toBottomOf="@id/topHeaderBackgroundManageEvent"/>

    <ImageButton
        android:id="@+id/buttonBackManageEvent"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="@id/topHeaderBackgroundManageEvent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/topHeaderBackgroundManageEvent"/>

    <ScrollView
        android:id="@+id/scrollEventManage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@color/beige"
        app:layout_constraintTop_toBottomOf="@id/topHeaderBackgroundManageEvent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/manageEventContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageManageEventPoster"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Event Poster"
                android:src="@drawable/default_poster"
                style="@style/RoundedImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonChangeEventPoster"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Event Poster"
                android:textColor="@color/green"
                app:backgroundTint="@color/zxing_transparent"
                app:cornerRadius="4dp"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/imageManageEventPoster"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textManageEventName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="22sp"
                android:textColor="@color/green"
                android:fontFamily="@font/roboto_slab"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/buttonChangeEventPoster"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonViewWaitingList"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="View Waiting List"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/green"
                android:layout_margin="16dp"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@id/textManageEventName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white"
                android:elevation="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDrawWinners"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="Draw Winners"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/green"
                android:layout_margin="16dp"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@id/buttonViewWaitingList"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white"
                android:elevation="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonViewQrCode"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="View QR Code"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/green"
                android:layout_margin="16dp"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@id/buttonDrawWinners"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white"
                android:elevation="4dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
