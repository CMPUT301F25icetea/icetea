<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/topHeaderBackgroundEventDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/yellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"/>

    <TextView
        android:id="@+id/textEventDetailHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Details"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintTop_toTopOf="@id/topHeaderBackgroundEventDetail"
        app:layout_constraintBottom_toBottomOf="@id/topHeaderBackgroundEventDetail"/>

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="@id/topHeaderBackgroundEventDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/topHeaderBackgroundEventDetail"/>

    <ScrollView
        android:id="@+id/scrollEventDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@color/beige"
        app:layout_constraintTop_toBottomOf="@id/topHeaderBackgroundEventDetail"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageEventPosterDetail"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Event Poster"
                android:src="@drawable/default_poster"
                style="@style/RoundedImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textEventNameDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="22sp"
                android:textColor="@color/green"
                android:fontFamily="@font/inter_regular"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/imageEventPosterDetail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textDescriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/textEventNameDetail"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:hintEnabled="true"
                app:boxStrokeColor="@color/green"
                app:boxBackgroundColor="@color/darkerBeige"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textDescriptionTitle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textEventDescriptionDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event description"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="false"
                    android:longClickable="false"
                    android:inputType="none"
                    android:background="@null"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textCriteriaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Criteria"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tilDescription"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCriteria"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:hintEnabled="true"
                app:boxStrokeColor="@color/green"
                app:boxBackgroundColor="@color/darkerBeige"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textCriteriaTitle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textEventCriteriaDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event criteria"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="false"
                    android:longClickable="false"
                    android:inputType="none"
                    android:background="@null"/>
            </com.google.android.material.textfield.TextInputLayout>



            <TextView
                android:id="@+id/textEventStartDateDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="ðŸ“…Start: Dec 1, 2025 @ 6:00 PM"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tilCriteria"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textWaitlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤ 0 / 50"
                android:textSize="20sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/textEventStartDateDetail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textGeolocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geolocation Not Required"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/textWaitlist"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textRegisterBy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Register by: Dec 22, 2025 @ 8:00 PM"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/textGeolocation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEventDetailsAction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Join Waitlist"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/green"
            app:cornerRadius="12dp"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:iconTint="@android:color/white"
            android:elevation="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDecline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Decline Invite"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/lightRed"
            app:cornerRadius="12dp"
            android:elevation="4dp"
            android:layout_marginStart="4dp"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
