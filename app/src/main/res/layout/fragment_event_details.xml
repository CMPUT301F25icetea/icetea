<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/topHeaderBackgroundEventDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/yellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"/>

    <TextView
        android:id="@+id/textEventDetailHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Details"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintTop_toTopOf="@id/topHeaderBackgroundEventDetail"
        app:layout_constraintBottom_toBottomOf="@id/topHeaderBackgroundEventDetail"/>

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="@id/topHeaderBackgroundEventDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/topHeaderBackgroundEventDetail"/>

    <ScrollView
        android:id="@+id/scrollEventDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@color/beige"
        app:layout_constraintTop_toBottomOf="@id/topHeaderBackgroundEventDetail"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageEventPosterDetail"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Event Poster"
                android:src="@drawable/default_poster"
                style="@style/RoundedImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textEventNameDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="22sp"
                android:textColor="@color/green"
                android:fontFamily="@font/inter_regular"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/imageEventPosterDetail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textDescriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/textEventNameDetail"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/textEventDescriptionDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Event description"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/textDescriptionTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textCriteriaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Criteria"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/textEventDescriptionDetail"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/textEventCriteriaDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Event criteria"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/textCriteriaTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/textDatesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date &amp; Location"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/textEventCriteriaDetail"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/textEventLocationDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/textDatesTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/textEventStartDateDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Start: Dec 1, 2025 @ 6:00 PM"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/textEventLocationDetail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textWaitlistTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waitlist Status"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/textEventStartDateDetail"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/textWaitlistCountDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0 / 50"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/textWaitlistTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/textGeolocationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geolocation"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/textWaitlistCountDetail"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/textGeolocationDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Required"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/textGeolocationTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEventDetailsAction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Join Waitlist"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/green"
            app:cornerRadius="12dp"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:iconTint="@android:color/white"
            android:elevation="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDecline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Decline Invite"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/lightRed"
            app:cornerRadius="12dp"
            android:elevation="4dp"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
